    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/build/server.bundle.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Webpack-Built Server",
            "program": "${workspaceFolder}/build/server.bundle.js",
            "outFiles": [
                "${workspaceFolder}/build/*.js"
            ],
            "sourceMaps": true,
            "restart": true,
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
    ]
}